<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.portalaplus">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.DetalhesEventoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NotaActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".activity.AlunoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.EventoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.PerfilActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.MenuActivity"/>
        <activity android:name=".activity.BemVindoActivity"/>
        <activity android:name=".activity.LoginActivity"/>
        <activity android:name=".activity.CadastroActivity"/>
        <activity android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>